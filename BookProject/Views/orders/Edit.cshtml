@model BookProject.Models.orders

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-family:KacstBook">Edit</h1>

<h4 style="font-family:KacstBook">Orders</h4>
<hr />
<div style="font-family:KacstBook" class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="bookId" />
            <input type="hidden" asp-for="userid" />
            <input type="hidden" asp-for="orderdate" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="font-family:KacstBook" asp-action="Index">Back to List</a>
</div>

