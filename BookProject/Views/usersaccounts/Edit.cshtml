@model BookProject.Models.usersaccounts

@{
    ViewData["Title"] = "Edit";
}

@{Layout = "~/Views/Shared/_Layout1.cshtml";}

<style>
    .form-group
    {
        font-family:KacstBook;
    }
</style>

<h1 style="font-family:KacstBook">Edit</h1>

<h4 style="font-family:KacstBook">Users Accounts</h4>
<hr />
<div style="font-family:KacstBook" class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="name" class="control-label">Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pass" class="control-label">Pass</label>
                <input asp-for="pass" class="form-control" />
                <span asp-validation-for="pass" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="role" />
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="font-family:KacstBook" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
